<%= form_for(entry) do |form| %>
<h3>Hey, would you like to write something here?</h3>
  <div class="form-group">
    <%= form.label("title") %>
    <%= form.text_field("title", class: "form-control", placeholder: "Create the title...") %>
  </div>
  
  <div class="form-group">
    <%= form.label("contents") %>
      <%= form.text_area("contents", class: "form-control", placeholder: "Write a note...") %>
    
  </div>
  
  
   <%= form.submit(class: "btn btn-info") %>
    

<% end %>